    <div class="container footer-top">
        <div class="row gy-4">
            <!-- Contact Info -->
            @if (ContactInfoList.Any())
            {
                <div class="col-lg-4 col-md-6 footer-contact">
                    <a href="#hero" class="d-flex align-items-center">
                        <h4 class="sitename">@Model.Value("companyName")</h4>
                    </a>
                    <span>Contact Us</span>
                    <div class="footer-contact pt-3">
                        @foreach (var contactInfo in ContactInfoList)
                        {
                            var contactInfoContent = contactInfo.Content as BasicInfo;
                            var urls = contactInfoContent.Urls;
                            var url = urls.Any() ? urls.FirstOrDefault().Url : "#";
                            <strong>@contactInfoContent.Title:</strong>
                            <br />
                            <a href="@url">
                                <span>@contactInfoContent.Data</span>
                                <br />
                            </a>

                        }
                    </div>
                </div>
            }

            <!-- Useful Links -->
            @if (navmenuList != null || navmenuList.Any())
            {
                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Useful Links</h4>
                    <ul class="list-unstyled p-0">
                        @foreach (var navmenu in navmenuList)
                        {
                            var navmenuContent = navmenu.Content as BasicInfo;
                            // get the url
                            var urls = navmenuContent.Urls;
                            var url = urls.Any() ? urls.FirstOrDefault().Url : "/";
                            <li class="grid gap-1">
                                <i class="bi @navmenuContent.Icon"></i>
                                <a href="@url">@navmenuContent.Title</a>
                            </li>
                        }
                    </ul>
                </div>

            }

            <!-- Our Services -->
            @if (offeredServicesList != null || offeredServicesList.Any())
            {
                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Our Services</h4>
                    <ul class="list-unstyled p-0">
                        @foreach (var offeredService in offeredServicesList)
                        {
                            var offeredServiceContent = offeredService.Content as BasicInfo;
                            var urls = offeredServiceContent.Urls;
                            var url = urls.Any() ? urls.FirstOrDefault().Url : "/";
                            <li class="grid gap-1">
                                <i class="bi @offeredServiceContent.Icon"></i>
                                <a href="#Service+@offeredServiceContent.Key">@offeredServiceContent.Title</a>
                            </li>
                        }
                    </ul>
                </div>
            }

            <!-- Our Social Networks -->
            @if (socialMediaInfoList != null || socialMediaInfoList.Any())
            {
                <div class="col-lg-4 col-md-12">
                    <h4>Follow Us</h4>
                    <p>Cras fermentum odio eu feugiat lide par naso tierra videa magna derita valies</p>
                    <div class="social-links d-flex">
                        @foreach (var socialMediaInfo in socialMediaInfoList)
                        {
                            var socialMediaInfoContent = socialMediaInfo.Content as BasicInfo;
                            var urls = socialMediaInfoContent.Urls;
                            var url = urls.Any() ? urls.FirstOrDefault().Url : "#";
                            <a href="@url"><i class="bi @socialMediaInfoContent.Icon"></i></a>
                        }
                    </div>
                </div>

            }

        </div>
    </div>

    <div class="container copyright text-center mt-4">
        <p>© <span>Copyright</span> <strong class="px-1 sitename">EXCP</strong> <span>All Rights Reserved</span></p>
