    var navmenuList = ((Umbraco.Cms.Web.Common.PublishedModels.HomePage)Model).Navmenu;
    var offeredServicesList = ((Umbraco.Cms.Web.Common.PublishedModels.HomePage)Model).OfferedServices;
    var socialMediaInfoList = ((Umbraco.Cms.Web.Common.PublishedModels.HomePage)Model).SocialMediaInfo;
}
